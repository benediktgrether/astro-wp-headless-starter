---
const { attributes = {} } = Astro.props;

interface GridItemAttributes {
	columnsWidth?: string; // "1/2" | "1/3" | "1/4" | "2/3"
}

const width = (attributes as GridItemAttributes).columnsWidth ?? '';

const widthMap: Record<string, string> = {
	'1/2': 'col-span-6', // 6 of 12 columns
	'1/3': 'col-span-4', // 4 of 12 columns
	'1/4': 'col-span-3', // 3 of 12 columns
	'2/3': 'col-span-8', // 8 of 12 columns
};

const columnsWidthClass = widthMap[width] ?? 'col-span-6'; // fallback
---

<div class={`${columnsWidthClass} p-4`}>
	<slot />
</div>
