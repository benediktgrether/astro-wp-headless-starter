---
const { spacer } = Astro.props;
console.log(spacer);

const spacerMap: Record<string, string> = {
	small: 'p-4',
	medium: 'p-8',
	large: 'p-16',
	xLarge: 'p-32',
	xxLarge: 'p-48',
	xxxLarge: 'p-64',
};

const spacerClass = spacerMap[spacer];
---

{spacer !== 'none' && <div class={`spacer ${spacerClass}`} />}
